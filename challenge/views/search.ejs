<%- include('../partials/header.ejs'); %>
    <div class="row mt-5 justify-content-center">
        <div class="col-md-8 text-center">

            <h4>Search results:</h4>
            <%_ if (!locals.user) { _%>
            <h5>ACCESS LEVEL: guest</h5>
            <%_ } else { _%>
            <h5>ACCESS LEVEL: <%= user.accessLevel %></h5>
            <%_ } _%>
            <h5>You searched for: <%= query %></h5>

            <%_ results.forEach(res => { _%>
            <div class="card my-5">
                <div class="card-body">
                    <h5 class="card-title text-start"><%= res.name %></h5>
                    <p class="card-text text-start">
                        <%= res.desc.slice(0, 250) + "..." %>
                    </p>
                    <a class="btn btn-primary float-end" href="/view/<%= res.id %>">View</a>
                </div>
            </div>
            <%_ }); _%>

            <div class="mt-4">
                This article uses material from the Wikipedia article <a href="https://en.wikipedia.org/wiki/Out-of-place_artifact">"Out-of-place artifact"</a>, which is released under the <a href="https://creativecommons.org/licenses/by-sa/3.0/">Creative Commons Attribution-Share-Alike License 3.0</a>.
            </h5>

        </div>
    </div>
<%- include('../partials/footer.ejs'); %>